      <body>
        <label for="searchInput">Search:</label>
        <input type="text" id="searchInput" placeholder="Enter search term">
        <button onclick="performSearch()">Search</button>

        <table>
          <div id="searchResults"></div>
          <thead>
            <tr>
              <th>ID</th>
              <th>Jméno</th>
              <th>Příjmení</th>
              <th>Věk</th>
              <th>Město</th>
              <th>Třídní Učitel</th>
              <th>smazat</th>
              <th>upravit</th>
            </tr>
          </thead>
          <tbody>
            
            <% pole[0].forEach(function(item) { %>
              <tr>
                <td><%=item.id%></td>
                <td><input class="inputTD" id="<%=item.id%>.fname" type="text" value="<%=item.fname%>"></td>
                <td><input class="inputTD" id="<%=item.id%>.lname" type="text" value="<%=item.lname%>"></td>
                <td><input class="inputTD" id="<%=item.id%>.age" type="text" value="<%=item.age%>"></td>
                <td><input class="inputTD" id="<%=item.id%>.city" type="text" value="<%=item.city%>"></td>
                <td>
                  <select class="inputTD" id="<%=item.id%>.teacher">
                    <option data-id="<%= item.ID %>" value="<%= item.Lname %>"><%= item.Lname %></option> 
                      <% pole[1].forEach((item2) => { %>
                        <% if (item.Lname != item2.Lname) { %>
                          <option data-id="<%= item2.ID %>" value="<%= item2.Lname %>"><%= item2.Lname %></option> 
                        <% } %>
                      <% }); %>
                  </select>
                </td>
<div>
                <td><button class="smazatB" onclick="mazat(<%=item.id%>)">
                  <span class="trash-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
                  </svg> </span> </button></td>
                <td><button class="smazatB" onclick="ulozto(<%=item.id%>)"><span class="trash-icon"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                  <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                </svg></span></button></td> </div>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </body>
    
      </html>